<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clProductItemRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="34dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="0dp">

    <ImageView
        android:id="@+id/imgViewProductImage"
        android:layout_width="@dimen/product_img_height_small"
        android:layout_height="@dimen/product_img_height_small"
        android:contentDescription="@string/product_image_content_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@android:color/holo_green_light" />


    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/inter_semibold"
        android:textSize="@dimen/product_name_tv_text_size"
        android:textColor="@color/black_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgViewProductImage"
        app:layout_constraintTop_toTopOf="@+id/imgViewProductImage"
        tools:text="Item x" />

    <TextView
        android:id="@+id/tvMrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_half"
        android:fontFamily="@font/inter"
        android:text="@string/mrp_text"
        android:textColor="#A3A3A3"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBottomOf="@id/imgViewProductImage"
        app:layout_constraintStart_toStartOf="@+id/tvProductName"
        app:layout_constraintTop_toBottomOf="@+id/tvProductName" />

    <TextView
        android:id="@+id/tvProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:textColor="@color/item_price_text_color"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBottomOf="@id/imgViewProductImage"
        app:layout_constraintStart_toEndOf="@+id/tvMrp"
        app:layout_constraintTop_toTopOf="@+id/tvMrp"
        tools:text="Rs 100" />

    <TextView
        android:id="@+id/tvProductExtraInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:textColor="@color/item_extra_info_color"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvProductPrice"
        app:layout_constraintTop_toTopOf="@+id/tvProductPrice"
        tools:text="Same Day Shipping" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="#E8E8E8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvMrp"
        app:layout_constraintTop_toBottomOf="@+id/tvMrp" />


</androidx.constraintlayout.widget.ConstraintLayout>