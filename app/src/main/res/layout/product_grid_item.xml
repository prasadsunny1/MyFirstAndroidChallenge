<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_20"
    android:layout_marginStart="@dimen/padding_4">

    <ImageView
        android:id="@+id/imgViewProductImage"
        android:layout_width="@dimen/no_size"
        android:layout_height="@dimen/no_size"
        app:layout_constraintHeight_min="@dimen/product_grid_item_img_min_height"
        app:layout_constraintWidth_min="@dimen/product_grid_item_img_min_height"
        app:layout_constraintHeight_max="@dimen/product_grid_item_img_max_height"
        app:layout_constraintWidth_max="@dimen/product_grid_item_img_max_height"
        app:layout_constraintDimensionRatio="1"
        android:contentDescription="@string/product_list_item_image_content_description"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="#F6F6F6" />

    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_8"
        android:fontFamily="@font/inter"
        android:textColor="@color/product_grid_item_title_text_color"
        android:textSize="@dimen/product_grid_item_name_text_size"
        app:layout_constraintStart_toStartOf="@+id/imgViewProductImage"
        app:layout_constraintTop_toBottomOf="@+id/imgViewProductImage"
        tools:text="Item 1" />

    <TextView
        android:id="@+id/tvProductPrice"
        android:layout_width="@dimen/no_size"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_4"
        android:layout_marginBottom="@dimen/padding_8"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/product_grid_item_price_text_color"
        android:textSize="@dimen/product_grid_item_price_text_size"
        app:layout_constraintStart_toStartOf="@+id/tvProductName"
        app:layout_constraintTop_toBottomOf="@+id/tvProductName"
        tools:text="â‚¹100.0" />

</androidx.constraintlayout.widget.ConstraintLayout>